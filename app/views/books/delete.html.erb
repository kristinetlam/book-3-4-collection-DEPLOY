<%= link_to "Back to books", books_path %>

<div class="books delete">
  <h2>Delete Book</h2>

  <p>Are you sure you want to permanently delete this book?</p>
  <p><%= @book.title %></p>

  <%= form_with(model: @book, method: :delete, local: true) do |f| %>
    <div class="form-buttons">
      <%= f.submit("Delete Book") %>
    </div>
  <% end %>
</div>
